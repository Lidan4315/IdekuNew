@model Ideku.Models.ViewModels.Validation.ValidationListViewModel
@{
    ViewData["Title"] = "Validation List";
}


<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">Ideas Pending Validation</h1>
            <p class="text-muted">Review and validate submitted ideas</p>
        </div>
    </div>
</div>

<!-- Filter Card -->
<div class="card filter-card mb-4">
    <div class="card-body">
        <form asp-action="List" method="get">
            <div class="row g-3 align-items-center">
                <div class="col-lg-3">
                    <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Search by Id, Title, Initiator..." value="@Model.SearchString">
                </div>
                <div class="col-lg">
                    <select id="selectedDivision" name="selectedDivision" asp-for="SelectedDivision" asp-items="@Model.Divisions" class="form-select">
                        <option value="">All Divisions</option>
                    </select>
                </div>
                <div class="col-lg">
                    <select id="selectedDepartment" name="selectedDepartment" asp-for="SelectedDepartment" asp-items="@Model.Departments" class="form-select">
                        <option value="">All Departments</option>
                    </select>
                </div>
                <div class="col-lg">
                    <select id="selectedStatus" name="selectedStatus" asp-for="SelectedStatus" asp-items="@Model.Statuses" class="form-select">
                        <option value="">All Statuses</option>
                    </select>
                </div>
                <div class="col-lg">
                    <select id="selectedStage" name="selectedStage" asp-for="SelectedStage" asp-items="@Model.Stages" class="form-select">
                        <option value="">All Stages</option>
                    </select>
                </div>
                <div class="col-auto">
                    <a asp-action="List" class="btn btn-outline-secondary" title="Reset Filters">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Ideas Table Card -->
<div class="card table-card">
    <div class="card-body">
        <div id="idea-table-container" class="table-responsive">
            @if (Model.PendingIdeas.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Idea ID</th>
                            <th style="min-width: 380px;">Idea Title</th>
                            <th style="min-width: 150px;">Initiator</th>
                            <th style="min-width: 250px;">Division</th>
                            <th style="min-width: 200px;">Department</th>
                            <th>Category</th>
                            <th>Stage</th>
                            <th>Activity Status</th>
                            <th>Saving Cost</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var idea in Model.PendingIdeas)
                        {
                            <tr style="cursor: pointer;" onclick="window.location='@Url.Action("Review", "Validation", new { id = idea.Id })'">
                                <td><span class="badge bg-light text-dark">#@idea.Id</span></td>
                                <td>
                                    <div class="truncate-title" title="@idea.IdeaName">
                                        @idea.IdeaName
                                    </div>
                                </td>
                                <td>
                                    <div class="submitter-info">
                                        <strong>@idea.InitiatorName</strong>
                                    </div>
                                </td>
                                <td>
                                    <div><strong>@idea.DivisionName</strong></div>
                                </td>
                                <td>
                                    <small class="text-muted">@idea.DepartmentName</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(idea.CategoryName))
                                    {
                                        <span class="badge bg-info">@idea.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">S@(idea.CurrentStage)</span>
                                </td>
                                <td>
                                    @if (idea.CurrentStatus == "Rejected")
                                    {
                                        <span class="text-danger">S@(idea.CurrentStage) Rejected</span>
                                    }
                                    else if (idea.CurrentStatus == "Approved")
                                    {
                                        <span class="text-success">S@(idea.CurrentStage) Approve</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Waiting Approve</span>
                                    }
                                </td>
                                <td>
                                    @if (idea.SavingCost.HasValue && idea.SavingCost > 0)
                                    {
                                        <span class="fw-bold text-success">@idea.SavingCost.Value.ToString("N0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusClass = idea.CurrentStatus switch
                                        {
                                            "Submitted" => "bg-primary",
                                            "Under Review" => "bg-warning",
                                            "Rejected" => "bg-danger",
                                            "Completed" => "bg-success",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@idea.CurrentStatus</span>
                                </td>
                                <td>
                                    <div>@idea.SubmittedDate.ToString("MMM dd")</div>
                                    <small class="text-muted">@idea.SubmittedDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm delete-idea-btn" data-id="@idea.Id" onclick="event.stopPropagation();"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3">No Ideas Found</h4>
                    <p class="text-muted">No ideas match your current filter criteria. Try adjusting your filters.</p>
                    <a asp-action="List" class="btn btn-primary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Reset All Filters
                    </a>
                </div>
            }
        </div>

        <!-- Pagination Controls -->
        <div class="card-footer d-flex justify-content-end" id="pagination-container">
            @await Html.PartialAsync("_PaginationPartial", Model)
        </div>
        
        <div id="table-loading-spinner" class="text-center py-5" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Filtering ideas...</p>
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/js/pages/validation-list.js" asp-append-version="true"></script>
}
