@model Ideku.Models.ViewModels.Validation.ValidationListViewModel
@{
    ViewData["Title"] = "Validation List";
}

<style>
    .truncate-title {
        max-width: 350px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">Ideas Pending Validation</h1>
            <p class="text-muted">Review and validate submitted ideas</p>
        </div>
        <div>
            <span class="badge bg-primary fs-6">Welcome, @Model.ValidatorName</span>
        </div>
    </div>
</div>

<!-- Stats Summary -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="stat-card bg-warning">
            <div class="stat-icon">
                <i class="bi bi-clock"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.TotalPending</h3>
                <p>Total Pending</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card bg-info">
            <div class="stat-icon">
                <i class="bi bi-file-earmark"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.SubmittedCount</h3>
                <p>Newly Submitted</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card bg-primary">
            <div class="stat-icon">
                <i class="bi bi-eye"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.UnderReviewCount</h3>
                <p>Under Review</p>
            </div>
        </div>
    </div>
</div>

<!-- Ideas Table -->
<div class="card">
    <div class="card-body">
        @if (Model.PendingIdeas.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Idea ID</th>
                            <th>Idea Title</th>
                            <th>Implementator</th>
                            <th>Division</th>
                            <th>Department</th>
                            <th>Category</th>
                            <th>Stage</th>
                            <th>Activity Status</th>
                            <th>Saving Cost</th>
                            <th>Status</th>
                            <th>Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var idea in Model.PendingIdeas)
                        {
                            <tr style="cursor: pointer;" onclick="window.location='@Url.Action("Review", "Validation", new { id = idea.Id })'">
                                <td><span class="badge bg-light text-dark">#@idea.Id</span></td>
                                <td>
                                    <div class="truncate-title" title="@idea.IdeaName">
                                        @idea.IdeaName
                                    </div>
                                </td>
                                <td>
                                    <div class="submitter-info">
                                        <strong>@idea.Initiator?.Name</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (idea.Initiator?.Divisi != null)
                                    {
                                        <div><strong>@idea.Initiator.Divisi.NamaDivisi</strong></div>
                                    }
                                </td>
                                <td>
                                    @if (idea.Initiator?.Departement != null)
                                    {
                                        <small class="text-muted">@idea.Initiator.Departement.NamaDepartement</small>
                                    }
                                </td>
                                <td>
                                    @if (idea.Category != null)
                                    {
                                        <span class="badge bg-info">@idea.Category.NamaCategory</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">S@(idea.CurrentStage ?? 0)</span>
                                </td>
                                <td>
                                    @if (idea.CurrentStatus == "Rejected")
                                    {
                                        <span class="text-danger">S@(idea.CurrentStage ?? 0) Rejected</span>
                                    }
                                    else if (idea.CurrentStatus == "Approved")
                                    {
                                        <span class="text-success">S@(idea.CurrentStage) Approve</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Waiting Approve</span>
                                    }
                                </td>
                                <td>
                                    @if (idea.SavingCost.HasValue)
                                    {
                                        <span class="fw-bold text-success">@idea.SavingCost.Value.ToString("C", new System.Globalization.CultureInfo("en-US"))</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusClass = idea.CurrentStatus switch
                                        {
                                            "Submitted" => "bg-primary",
                                            "Under Review" => "bg-warning",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@(idea.CurrentStatus ?? "Submitted")</span>
                                </td>
                                <td>
                                    <div>@idea.SubmittedDate.ToString("MMM dd")</div>
                                    <small class="text-muted">@idea.SubmittedDate.ToString("HH:mm")</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state text-center py-5">
                <i class="bi bi-check-circle display-1 text-success"></i>
                <h4 class="mt-3">All Caught Up!</h4>
                <p class="text-muted">There are no ideas pending validation at this time.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Back to Dashboard
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
}
