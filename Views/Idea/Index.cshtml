@model IdeaIndexViewModel
@{
    ViewData["Title"] = "My Ideas";
}

<div class="modern-page">
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">My Ideas</h1>
            <p class="text-muted">Track and manage your submitted ideas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Submit New Idea
        </a>
    </div>
</div>



<!-- Filter Card -->
<div class="card filter-card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="filterForm">
            <div class="row g-3 align-items-center">
                <div class="col-lg-3">
                    <input type="text" id="searchString" name="searchString" class="form-control" 
                           placeholder="Search by ID, Title, Code..." value="@Model.SearchString">
                </div>
                <div class="col-lg">
                    <select id="selectedCategory" name="selectedCategory" asp-for="SelectedCategory" 
                            asp-items="@Model.Categories" class="form-select">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-lg">
                    <select id="selectedEvent" name="selectedEvent" asp-for="SelectedEvent" 
                            asp-items="@Model.Events" class="form-select">
                        <option value="">All Events</option>
                    </select>
                </div>
                <div class="col-lg">
                    <select id="selectedStatus" name="selectedStatus" asp-for="SelectedStatus" 
                            asp-items="@Model.Statuses" class="form-select">
                        <option value="">All Statuses</option>
                    </select>
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-outline-secondary" title="Reset Filters">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Ideas Table Card -->
<div class="card table-card">
    <div class="card-body" id="ideas-table-container">
        @await Html.PartialAsync("_IndexTablePartial", Model)
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the idea <strong id="ideaName"></strong>?</p>
                <p class="text-muted">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/my-ideas.js" asp-append-version="true"></script>
    <script>
        function confirmDelete(ideaId, ideaTitle) {
            document.getElementById('ideaName').textContent = ideaTitle;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + ideaId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
</div>