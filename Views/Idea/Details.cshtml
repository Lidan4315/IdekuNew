@model Ideku.Models.Entities.Idea
@{
    ViewData["Title"] = "Idea Details";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">Idea Details</h1>
            <p class="text-muted">View detailed information about your idea</p>
        </div>
        <div>
            @if (Model.Status == "Submitted")
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil me-2"></i>Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>@Model.IdeaName</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Idea ID:</strong>
                        <span class="badge bg-light text-dark">#@Model.Id</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        @{
                            var statusClass = Model.Status switch
                            {
                                "Submitted" => "bg-primary",
                                "Under Review" => "bg-warning",
                                "Approved" => "bg-success",
                                "Rejected" => "bg-danger",
                                _ => "bg-secondary"
                        };
                    }
                    <span class="badge @statusClass">@(Model.Status)</span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Initiator:</strong>
                    <span>@Model.Initiator</span>
                </div>
                <div class="col-md-6">
                    <strong>Submitted Date:</strong>
                    <span>@Model.SubmittedDate.ToString("MMMM dd, yyyy")</span>
                </div>
            </div>

            @if (Model.TargetDivision != null || Model.TargetDepartment != null)
            {
                <div class="row mb-3">
                    @if (Model.TargetDivision != null)
                    {
                        <div class="col-md-6">
                            <strong>Division:</strong>
                            <span>@Model.TargetDivision.NamaDivisi</span>
                        </div>
                    }
                    @if (Model.TargetDepartment != null)
                    {
                        <div class="col-md-6">
                            <strong>Department:</strong>
                            <span>@Model.TargetDepartment.NamaDepartement</span>
                        </div>
                    }
                </div>
            }

            @if (Model.Category != null || Model.Event != null)
            {
                <div class="row mb-3">
                    @if (Model.Category != null)
                    {
                        <div class="col-md-6">
                            <strong>Category:</strong>
                            <span class="badge bg-info">@Model.Category.NamaCategory</span>
                        </div>
                    }
                    @if (Model.Event != null)
                    {
                        <div class="col-md-6">
                            <strong>Event:</strong>
                            <span class="badge bg-secondary">@Model.Event.NamaEvent</span>
                        </div>
                    }
                </div>
            }


            @if (!string.IsNullOrEmpty(Model.Solution))
            {
                <div class="mb-4">
                    <h6><i class="bi bi-gear me-2"></i>Proposed Solution</h6>
                    <p class="text-muted">@Model.Solution</p>
                </div>
            }

            @if (Model.SavingCost > 0)
            {
                <div class="mb-4">
                    <h6><i class="bi bi-currency-dollar me-2"></i>Financial Impact</h6>
                    <p class="fw-bold text-success fs-5">@Model.SavingCost.ToString("C", new System.Globalization.CultureInfo("en-US"))</p>
                    <small class="text-muted">Estimated cost savings</small>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AttachmentFiles))
            {
                <div class="mb-4">
                    <h6><i class="bi bi-paperclip me-2"></i>Attachment</h6>
                    <a asp-action="Download" asp-route-filename="@Model.AttachmentFiles" asp-route-ideaId="@Model.Id" 
                       target="_blank" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-download me-2"></i>Download Attachment
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-lg-4">
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Idea Timeline</h6>
        </div>
        <div class="card-body">
            <div class="timeline">
                <div class="timeline-item active">
                    <div class="timeline-marker bg-success"></div>
                    <div class="timeline-content">
                        <h6>Submitted</h6>
                        <p class="text-muted small">@Model.SubmittedDate.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                </div>
                
                @if (Model.Status == "Under Review" || Model.Status == "Approved" || Model.Status == "Rejected")
                {
                    <div class="timeline-item active">
                        <div class="timeline-marker bg-warning"></div>
                        <div class="timeline-content">
                            <h6>Under Review</h6>
                            <p class="text-muted small">Review in progress</p>
                        </div>
                    </div>
                }
                
                @if (Model.Status == "Approved")
                {
                    <div class="timeline-item active">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6>Approved</h6>
                            <p class="text-muted small">Idea approved for implementation</p>
                        </div>
                    </div>
                }
                else if (Model.Status == "Rejected")
                {
                    <div class="timeline-item active">
                        <div class="timeline-marker bg-danger"></div>
                        <div class="timeline-content">
                            <h6>Rejected</h6>
                            <p class="text-muted small">Idea needs revision</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="timeline-item">
                        <div class="timeline-marker bg-light"></div>
                        <div class="timeline-content">
                            <h6 class="text-muted">Pending Decision</h6>
                            <p class="text-muted small">Awaiting review outcome</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
