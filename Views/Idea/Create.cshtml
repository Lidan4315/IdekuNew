@model IdeaCreateViewModel
@{
    ViewData["Title"] = ViewBag.IsEdit == true ? "Edit Idea" : "Submit New Idea";
    var isEdit = ViewBag.IsEdit == true;
    var ideaId = ViewBag.IdeaId ?? 0;
    var currentAttachment = ViewBag.CurrentAttachment as string;
}

<div class="page-header mb-4">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
    <p class="text-muted">@(isEdit ? "Update your idea details" : "Share your innovative idea with the team")</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="@(isEdit ? "Edit" : "Create")" asp-route-id="@ideaId" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Employee Info Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="bi bi-person me-2"></i>Employee Information
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BadgeNumber" class="form-label required"></label>
                                    <input asp-for="BadgeNumber" class="form-control" placeholder="Enter your badge number" />
                                    <span asp-validation-for="BadgeNumber" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Division" class="form-label"></label>
                                    <select asp-for="Division" class="form-select" asp-items="@(new SelectList(ViewBag.Divisions, "Id", "NamaDivisi"))">
                                        <option value="">-- Select Division --</option>
                                    </select>
                                </div>
                            </div>

                            <!-- ðŸ”¥ NEW: Department dropdown -->
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label"></label>
                                    <select asp-for="Department" class="form-select" asp-items="@(new SelectList(ViewBag.Departements, "Id", "Name"))">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Idea Category Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="bi bi-tags me-2"></i>Category & Event
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label"></label>
                                    <select asp-for="Category" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "NamaCategory"))">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Event" class="form-label"></label>
                                    <select asp-for="Event" class="form-select" asp-items="@(new SelectList(ViewBag.Events, "Id", "NamaEvent"))">
                                        <option value="">-- Select Event --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Idea Details Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="bi bi-lightbulb me-2"></i>Idea Details
                        </h5>
                        
                        <div class="mb-3">
                            <label asp-for="IdeaName" class="form-label required"></label>
                            <input asp-for="IdeaName" class="form-control" placeholder="Give your idea a catchy title" />
                            <span asp-validation-for="IdeaName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="IdeaIssueBackground" class="form-label"></label>
                            <textarea asp-for="IdeaIssueBackground" class="form-control" rows="4" 
                                    placeholder="Describe the problem or issue this idea addresses"></textarea>
                            <small class="form-text text-muted">What problem does your idea solve?</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="IdeaSolution" class="form-label"></label>
                            <textarea asp-for="IdeaSolution" class="form-control" rows="4" 
                                    placeholder="Explain your proposed solution"></textarea>
                            <small class="form-text text-muted">How would you implement this idea?</small>
                        </div>
                    </div>

                    <!-- Financial Impact Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="bi bi-currency-dollar me-2"></i>Financial Impact & Attachments
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SavingCost" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">USD</span>
                                        <input asp-for="SavingCost" class="form-control" type="number" step="0.01" 
                                               placeholder="0.00" />
                                    </div>
                                    <small class="form-text text-muted">Estimated cost savings (optional)</small>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AttachmentFile" class="form-label"></label>
                                    @if (isEdit && !string.IsNullOrEmpty(currentAttachment))
                                    {
                                        <div class="current-file mb-2">
                                            <small class="text-muted">
                                                Current file: 
                                                <a href="@Url.Action("Download", new { filename = currentAttachment, ideaId = ideaId })" target="_blank">
                                                    @currentAttachment.Substring(37)
                                                </a>
                                            </small>
                                        </div>
                                    }
                                    <input asp-for="AttachmentFile" class="form-control" type="file" 
                                           accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.jpg,.jpeg,.png" />
                                    <small class="form-text text-muted">
                                        @(isEdit ? "Upload new file to replace current attachment (optional)" : "Upload supporting documents (optional)")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>@(isEdit ? "Update Idea" : "Submit Idea")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Sidebar Tips -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Tips for Great Ideas</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Be specific about the problem you're solving
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Explain the impact and benefits clearly
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Include supporting documents if possible
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Think about implementation feasibility
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}